= simple_form_for(@contact,html: {multipart: true}) do |f|
  - if @contact.avatar.url
    = image_tag(@contact.avatar.thumb)
  = f.input :avatar, as: :file, label: "Photo"
  = f.input :lastname, placeholder: "Nom", label: "Nom", error: "Vous devez rentrer un nom."
  = f.input :firstname, placeholder: "Prénom", label: "Prénom"
  = f.input :phone, placeholder: "0148780978", label: "Téléphone",  error: "Vous devez rentrer un numéro de téléphone."
  = f.input :address, placeholder: "15 av charles de gaulle", label: "addresse"
  = f.input :cp, placeholder: "75000", label: "Code postal"
  = f.input :city, placeholder: "Paris", label: "ville"
  = f.label :tag_id
  = f.input :tag_id, collection: Tag.all.collect{|u| [u.name, u.id]}, prompt: "choisir un tag"
  %br
  = f.button :submit, "Ajouter", class: "btn btn-primary"
